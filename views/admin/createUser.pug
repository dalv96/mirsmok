extend ../basic
append head
	link(rel='stylesheet' href='/public/css/users.css')
	script(src='/public/js/account.js')
append content
	.__block
		h1 Создание пользователя
		form.col-md-6(method="post")
				p
					label Логин
					input(type="text" name="login" id="login" class="input-area form-control" autofocus minlength="3" maxlength="24" placeholder="Введите логин" required )

				p
					label Пароль
					input(type="password" name="password" id="password" class="input-area form-control" minlength="5" maxlength="24" required)

				p
					label Повторите пароль
					input(type="password" name="passwordRep" id="passwordRep" class="input-area form-control" minlength="5" maxlength="24" required )

				p
					label Телефон
					input(type='text' name='phone' id='phone' class='input-area form-control' minlength="5" maxlength="24" placeholder='+71234567890')
				
				p
					label Email
					input(type='email' name='email' id='email' class='input-area form-control' minlength="5" maxlength="50" placeholder='example@miranda-media.ru')
					
				p
					label Ф.И.О.
					input(type="text" name="fullName" id="fullName" class="input-area form-control" minlength="3" maxlength="50" placeholder="Фамилия Имя Отчество" required)

				p
					label Права
					select(name="role" id="role" class="input-area form-control" onChange='changeRole(this.value)' required)
						each role in roles
							option(value=role.id)= role.name
				p.hide
					label Город
					select(name="city" id="city" class="input-area form-control" required)
						each city in cities
							option(value=city._id)= city.name
				hr
				input(type="submit" class="btn btn-default" id="submit" value="Создать")
